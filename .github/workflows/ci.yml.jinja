name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
{%- if use_ruff or use_ty %}
  quality:
    name: Code Quality
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

{%- if package_manager == "uv" %}

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true
          cache-dependency-glob: "uv.lock"

      - name: Set up Python
        run: uv python install {{ python_version }}

      - name: Install dependencies
        run: |
          uv sync --all-extras --dev
{%- else %}

      - name: Install pixi
        run: |
          curl -fsSL https://pixi.sh/install.sh | bash
          echo "$HOME/.pixi/bin" >> $GITHUB_PATH

      - name: Install dependencies
        run: |
          pixi install
{%- endif %}

{%- if use_ruff %}

      - name: Check code formatting with Ruff
        run: |
{%- if package_manager == "uv" %}
          uv run ruff format --check .
{%- else %}
          pixi run ruff format --check .
{%- endif %}

      - name: Lint code with Ruff
        run: |
{%- if package_manager == "uv" %}
          uv run ruff check .
{%- else %}
          pixi run ruff check .
{%- endif %}
{%- endif %}

{%- if use_ty %}

      - name: Type check with ty
        run: |
{%- if package_manager == "uv" %}
          uv run ty check src/
{%- else %}
          pixi run ty check src/
{%- endif %}
{%- endif %}
{%- endif %}

  pytorch-check:
    name: PyTorch Environment Check
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

{%- if package_manager == "uv" %}

      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true
          cache-dependency-glob: "uv.lock"

      - name: Set up Python
        run: uv python install {{ python_version }}

      - name: Install dependencies
        run: |
          uv sync --all-extras --dev

      - name: Check PyTorch installation
        run: |
          uv run python -c "import torch; print(f'PyTorch version: {torch.__version__}')"
          uv run python -c "import torch; print(f'CUDA available: {torch.cuda.is_available()}')"
          uv run python -c "import torch; print(f'CUDA version: {torch.version.cuda if torch.cuda.is_available() else \"N/A\"}')"
{%- if use_lightning %}
          uv run python -c "import pytorch_lightning as pl; print(f'Lightning version: {pl.__version__}')"
{%- endif %}
{%- if use_hydra %}
          uv run python -c "import hydra; print(f'Hydra version: {hydra.__version__}')"
{%- endif %}
{%- else %}

      - name: Install pixi
        run: |
          curl -fsSL https://pixi.sh/install.sh | bash
          echo "$HOME/.pixi/bin" >> $GITHUB_PATH

      - name: Install dependencies
        run: |
          pixi install

      - name: Check PyTorch installation
        run: |
          pixi run python -c "import torch; print(f'PyTorch version: {torch.__version__}')"
          pixi run python -c "import torch; print(f'CUDA available: {torch.cuda.is_available()}')"
          pixi run python -c "import torch; print(f'CUDA version: {torch.version.cuda if torch.cuda.is_available() else \"N/A\"}')"
{%- if use_lightning %}
          pixi run python -c "import pytorch_lightning as pl; print(f'Lightning version: {pl.__version__}')"
{%- endif %}
{%- if use_hydra %}
          pixi run python -c "import hydra; print(f'Hydra version: {hydra.__version__}')"
{%- endif %}
{%- endif %}
